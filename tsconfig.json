{
  "compilerOptions": {
    "incremental": true,
    "target": "ES2022",
    "outDir": "dist",
    //"rootDir": ".",
    //"rootDirs": ["src", "tests"],
    "rootDirs": ["./src", "./test"],
    "sourceMap": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": ".",
    // "paths": {
    //   "@/*": ["*"],
    //   "@/tests/*": ["../tests/*"],
    // },
    "paths": {
        "@src/*": ["./src/*"],
        "@test/*": ["./test/*"]
    },
    "strict": true,
    "noImplicitOverride": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": ["./src/**/*.ts","./tests/**/*.ts"],
  "exclude": ["./node_modules/*", "dist"]
}
